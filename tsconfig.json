{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true
  }
}