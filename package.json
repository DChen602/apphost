{
  "name": "apphost",
  "version": "0.0.2",
  "description": "Configuration and service manager. Load config from file, environment variables and cli args.",
  "main": "lib/index.js",
  "types": "lib/typings/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean:lib": "shx rm -r lib",
    "clean:test": "shx rm -r .nyc_output coverage",
    "clean": "run-p clean:lib clean:test",
    "lint": "eslint \"src/**\"",
    "test": "tap -R spec",
    "test:watch": "pnpm test -- -w",
    "test:coverage": "tap --coverage-report html",
    "test:coverage:watch": "nodemon --exec \"npm run test:coverage\" --watch .nyc_output",
    "build": "tsc",
    "start": "tsc -w --preserveWatchOutput"
  },
  "keywords": [
    "config",
    "configuration",
    "env",
    "environment variables",
    "service container",
    "cli",
    "argv",
    "configuration manager"
  ],
  "author": {
    "name": "Derek Worthen",
    "email": "worthend.derek@gmail.com"
  },
  "homepage": "https://github.com/dworthen/apphost",
  "repository": {
    "type": "git",
    "url": "https://github.com/dworthen/apphost.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@rushstack/eslint-config": "^0.5.7",
    "@types/command-line-usage": "^5.0.1",
    "@types/flat": "^5.0.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^13.13.5",
    "@types/object-path": "^0.11.0",
    "dotenv": "^8.2.0",
    "eslint": "6.x",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "shx": "^0.3.2",
    "tap": "^14.10.7",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "command-line-usage": "^6.1.0",
    "deepmerge": "^4.2.2",
    "flat": "^5.0.0",
    "minimist": "^1.2.5",
    "object-path": "^0.11.4"
  }
}
