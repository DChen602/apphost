{
  "name": "apphost",
  "version": "0.2.0",
  "description": "Functional configuration manager. Load config from file, environment variables, and cli args.",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "shx rm -r lib .nyc_output coverage",
    "pretty": "prettier \"./src/**/*.{js,jsx,ts,tsx}\"",
    "format:check": "run-s \"pretty -- --check\"",
    "format": "run-s \"pretty -- --write\"",
    "lint:check": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "run-s \"lint:check -- --fix\"",
    "test": "c8 --reporter lcov tap -R spec --node-arg=--loader=ts-node/esm",
    "apiReport": "api-extractor run",
    "apiReport:check": "run-s build:types apiReport",
    "build:apiReport": "run-s build:types \"apiReport -- --local\"",
    "build:types": "tsc --emitDeclarationOnly",
    "build:cjs": "esbuild ./src/index.ts --sourcemap --bundle --format=cjs --target=node16 --platform=node --outfile=./lib/cjs/index.cjs",
    "build:esm": "esbuild ./src/**/*.ts --sourcemap --format=esm --target=node16 --platform=node --outdir=./lib/esm",
    "build": "NODE_ENV=production run-p build:apiReport build:esm build:cjs",
    "git:precommit": "lint-staged",
    "git:ci": "npm-run-all --parallel lint:check format:check --sequential apiReport:check test build",
    "start": "NODE_ENV=development run-p \"build:types -- -w\" \"build:esm -- --watch\" \"build:cjs -- --watch\"",
    "start:prod": "NODE_ENV=production run-p \"build:types -- -w\" \"build:esm -- --watch\" \"build:cjs -- --watch\"",
    "release:changeset": "changeset",
    "release:version": "changeset version",
    "release:publish": "changeset publish --otp $NPM_TOKEN"
  },
  "keywords": [
    "config",
    "functional config",
    "functional configuration",
    "configuration",
    "env",
    "environment variables",
    "cli",
    "argv",
    "configuration manager"
  ],
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "homepage": "https://github.com/dworthen/apphost",
  "repository": {
    "type": "git",
    "url": "https://github.com/dworthen/apphost.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.11",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@microsoft/api-extractor": "^7.23.0",
    "@types/flat": "^5.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.30",
    "@types/object-path": "^0.11.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "c8": "^7.11.2",
    "esbuild": "^0.14.38",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.23.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "shx": "^0.3.4",
    "tap": "^16.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.0",
    "dotenv-expand": "^8.0.3",
    "flat": "^5.0.2",
    "minimist": "^1.2.6",
    "object-path": "^0.11.8"
  }
}